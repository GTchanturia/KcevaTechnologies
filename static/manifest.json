{
  "name": "kceva-ai-daily-extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Never miss a deal on AI tools with Kceva AI Daily",
  "permissions": [
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://kcevadaily.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
